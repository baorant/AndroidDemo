<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".room.RoomActivity">
    <EditText
        android:id="@+id/addName"
        android:hint="新增用户名称"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/addAge"
        android:hint="新增用户年龄"
        app:layout_constraintLeft_toRightOf="@id/addName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/addBtn"
        android:text="新增"
        app:layout_constraintRight_toLeftOf="@id/addAge"
        app:layout_constraintTop_toBottomOf="@id/addName"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/queryBtn"
        android:text="查询所有用户"
        app:layout_constraintLeft_toRightOf="@id/addBtn"
        app:layout_constraintTop_toBottomOf="@id/addAge"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/studentInfo"
        android:text="showStudents"
        android:hint="查询所有用户的结果"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/queryBtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>